  "features": {
    "ghcr.io/devcontainers/features/github-cli:": {},
    "ghcr.io/ministryofjustice/devcontainer-feature/astral:": {},
    "ghcr.io/ministryofjustice/devcontainer-feature/terraform:": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
